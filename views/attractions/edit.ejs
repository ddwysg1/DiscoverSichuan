<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= attraction.name %></h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/attractions/<%= attraction._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="attraction[name]" value="<%= attraction.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="attraction[image]" value="<%= attraction.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="attraction[description]" value="<%= attraction.description %>"  rows="10"><%= attraction.description %></textarea>
                </div>
                <div class="input-group form-group">
                      <span class="input-group-addon">$</span>
                      <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"  name="attraction[price]" value="<%= attraction.price %>">
                      <span class="input-group-addon">.00</span>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/attractions">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
